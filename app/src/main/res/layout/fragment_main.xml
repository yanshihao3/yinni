<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_tab_container"
        android:layout_width="match_parent"
        android:layout_marginBottom="55dp"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="54dp"
        android:background="@color/line_background"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tl_iconHeight="25dp"
        app:tl_iconWidth="25dp"
        app:tl_iconVisible="true"
        app:tl_iconMargin="2dp"
        app:tl_iconGravity="TOP"
        app:tl_textSelectColor="@color/key_ok_color"
        app:tl_textUnselectColor="@color/bg_color_99"
        app:tl_textsize="12sp"
        android:layout_gravity="bottom">

    </com.flyco.tablayout.CommonTabLayout>
</FrameLayout>