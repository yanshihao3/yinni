<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <TextView
        android:background="@color/key_ok_color"
        android:id="@+id/title_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="添加银行卡"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <include layout="@layout/line"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include layout="@layout/gray_interval" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp" >

                <ImageView
                    android:id="@+id/product_iv_logo"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <include layout="@layout/gray_interval" />

            <TextView
                android:id="@+id/product_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="豆豆钱攻略"
                android:textColor="#323232"
                android:textSize="17sp" />

            <include layout="@layout/line_short" />

            <TextView
                android:id="@+id/product_tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="10dp"
                android:text="借款额度"
                android:textColor="#646464"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/product_tv_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="10dp"
                android:text="借款期限"
                android:textColor="#646464"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/product_tv_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="10dp"
                android:text="下款速度"
                android:textColor="#646464"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/product_tv_succes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="10dp"
                android:text="成功率"
                android:textColor="#646464"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                />

            <include layout="@layout/gray_interval" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/syarat_pengajuan"
                android:textColor="#323232"
                android:textSize="17sp" />

            <include layout="@layout/line_short" />

            <TextView
                android:id="@+id/product_tv_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="10dp"
                android:text="申请要求"
                android:textColor="#646464"
                android:textSize="15sp"
                />
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <Button
            android:id="@+id/btn_product_details_apply"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="@string/segera_pinjam"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>